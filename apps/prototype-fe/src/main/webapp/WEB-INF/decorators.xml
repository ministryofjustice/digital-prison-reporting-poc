<decorators defaultdir="/theme/gds">   
    <excludes>
        <pattern>/content/*</pattern>
        <pattern>/decoration/*</pattern>
        <pattern>/WEB-INF/*</pattern>
        <pattern>/js/*</pattern>
        <pattern>/css/*</pattern>
        <pattern>/img/*</pattern>
        <pattern>/test/*</pattern>
        <pattern>/admin/*</pattern>
          
        <pattern>/chart/js/*</pattern>
        
        <pattern>/api/*</pattern>
	</excludes>

	<decorator name="auth" page="auth.ftl">
          <pattern>/signup</pattern>
          <pattern>/complete</pattern>
          <pattern>/authenticate</pattern>
          <pattern>/register</pattern>
          <pattern>/register/*</pattern>
          
          <pattern>/password-retrieve</pattern>
          <pattern>/password-reset</pattern>
          
    </decorator>

    <decorator name="app" page="app.ftl">
          <pattern>/error/*</pattern>
    </decorator>
    	
    <decorator name="default" page="default.ftl">
          <pattern>/*</pattern>
    </decorator>
</decorators>