<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                      http://www.springframework.org/schema/beans/spring-beans.xsd">

	<beans profile="test,demo,dev-demo,uat,perf,staging,live">
	
		
		<bean id="standard-config" primary="true" class="com.zaxxer.hikari.HikariConfig">
		    <property name="poolName" value="standard" />
		    <property name="transactionIsolation" value="TRANSACTION_SERIALIZABLE" />
		    <property name="connectionTestQuery" value="SELECT 1" />
		    <property name="driverClassName" value="com.mysql.jdbc.Driver" />
			<property name="jdbcUrl" value="#{systemProperties['JDBC_CONNECTION_STRING']}"/>
		    <property name="username" value="${data.user:sa}" />
		    <property name="password" value="${data.password:}" />
		    <property name="maximumPoolSize" value="10" />
		    <property name="idleTimeout" value="30000" />
		</bean>
		<bean id="standard-datasource" primary="true" class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy">
			<constructor-arg>
				<bean class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
					<constructor-arg ref="standard-config" />
				</bean>
			</constructor-arg>
		</bean>
	</beans>

	<beans profile="default,dev,local-test,local-demo">
	
		<bean id="standard-config" class="com.zaxxer.hikari.HikariConfig">
		    <property name="poolName" value="standard" />
		    <property name="connectionTestQuery" value="SELECT 1" />
		    <property name="driverClassName" value="org.h2.Driver" />
			<property name="jdbcUrl" value="jdbc:h2:tcp://localhost/~/dpr;DB_CLOSE_DELAY=-1;TRACE_LEVEL_SYSTEM_OUT=2"/>
		    <property name="username" value="sa" />
		    <property name="password" value="password" />
		    <property name="maximumPoolSize" value="40" />
		    <property name="idleTimeout" value="30000" />
		</bean>
		<bean id="standard-datasource" primary="true" class="org.springframework.jdbc.datasource.LazyConnectionDataSourceProxy">
			<constructor-arg>
				<bean class="com.zaxxer.hikari.HikariDataSource" destroy-method="close">
					<constructor-arg ref="standard-config" />
				</bean>
			</constructor-arg>
		</bean>
	</beans>
	
</beans>